<h1>Author: {{author.name}}</h1>
<p>{{author.lifespan_formatted}}</p>

<div style="margin-left:20px;margin-top:20px">
    <h4>Books</h4>

    <dl>
        {{#each author_books}}
            <dt>
                <a href={{this.url}}>{{this.title}}</a>
            </dt>
            <dd>{{this.summary}}</dd>
        {{else}}
            <p>This author has no books.</p>
        {{/each}}
    </dl>
</div>