<h1>{{title}}</h1>

<form method="POST" action=''>
    <div class="form-group">
        <label for="first_name">First Name:</label>
        <input id="first_name" class="form-control" type="text" placeholder="First name (Christian)" name='first_name' required='true' value={{is_undefined author author.first_name}}>
        <label for="family_name">Family Name:</label>
        <input id="family_name" class="form-control" type="text" placeholder="Family name (surname)" name='family_name' required='true' value={{is_undefined author author.family_name}}> 
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of Birth:</label>
        <input id="date_of_birth" class="form-control" type='date' placeholder='dd/mm/yyyy' name="date_of_birth" value={{is_undefined author author.date_of_birth}}>
        <label for="date_of_death">Date of Death:</label>
        <input id="date_of_death" class="form-control" type='date' placeholder='dd/mm/yyyy' name="date_of_death" value={{is_undefined author author.date_of_death}}>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
    <ul>
        {{#each errors}}
            <li>{{this.msg}}</li>
        {{/each}}
    </ul>
{{/if}}