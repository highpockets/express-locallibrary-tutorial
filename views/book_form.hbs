<h1>{{title}}</h1>

<form method="POST" action=''>
    <div class="form-group">
        <label for="title">Title:</label>
        <input id="title" class="form-control" type="text" placeholder="Name of book" name="title" required='true' value='{{is_undefined book book.title}}'>
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <select id="author" class="form-control" type="select" placeholder="Select author" name='author' required='true'>
            {{sort_authors authors}}
            {{#each authors}}
                {{#if ../book}}
                    <option value={{this._id}} {{is_the_author this._id ../book.author ../book.author._id}}>{{this.name}}</option>
                {{else}}
                    <option value={{this._id}}>{{this.name}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="summary">Summary:</label>
        <textarea id="summary" class="form-control" type="textarea" placeholder="Summary" name="summary" rows="3" required='true'>{{is_undefined book book.summary}}</textarea>
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input id="isbn" class="form-control" type="text" placeholder="ISBN13" name="isbn" required="true" value={{is_undefined book book.isbn}}>
    </div>
    <div class="form-group">
        <label>Genre:</label>
        <div>
            {{#each genres}}
                <div style='display:inline;padding-right:10px;'>
                    <input class="checkbox-input" type="checkbox" name="genre" id={{this._id}} value={{this._id}} {{is_checked this.checked}}>
                    <label for="genre._id">{{this.name}}</label>
                </div>
            {{/each}}
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
    <ul>
        {{#each errors}}
            <li>{{this.msg}}</li>
        {{/each}}
    </ul>
{{/if}}