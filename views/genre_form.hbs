<h1>{{title}}</h1>

<form method="POST" action="">
    <div class="form-group">
        <label for="name">Genre:</label>
        <input id="name" class="form-control" type="text" placeholder="Fantasy, Poetry etc." name='name' required='true' value={{is_undefined genre genre.name}}>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
    <ul>
        {{#each errors}}
            <li>{{this.msg}}</li>
        {{/each}}
    </ul>
{{/if}}